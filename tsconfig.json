{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/components/layout/*"],
      "@sections/*": ["src/components/sections/*"],
      "@ui/*": ["src/components/ui/*"],
      "@data/*": ["src/data/*"],
      "@lib/*": ["src/lib/*"]
    }
  }
}

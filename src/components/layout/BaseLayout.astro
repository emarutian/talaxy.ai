---
import '../../styles/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Talaxy.ai — Build Your Workforce Constellation',
  description = 'Talaxy.ai helps growing companies find the right talent with AI-powered search and automate white-collar work — so your team is built to scale.',
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, 'https://talaxy.ai');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.href} />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/talaxy-icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://talaxy.ai/og-image.jpg" />
    <meta property="og:site_name" content="Talaxy.ai" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://talaxy.ai/og-image.jpg" />

    <!-- Preload critical assets -->
    <link rel="preload" href="/images/talaxy-icon.svg" as="image" type="image/svg+xml" />

    <!-- Google Fonts (non-render-blocking) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;500;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;500;600;700&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@graph': [
        {
          '@type': 'Organization',
          name: 'Talaxy.ai',
          url: 'https://talaxy.ai',
          description: 'AI-powered talent search and white-collar automation for SMBs.',
          logo: 'https://talaxy.ai/images/talaxy-logo.svg',
          contactPoint: {
            '@type': 'ContactPoint',
            email: 'hello@talaxy.ai',
            contactType: 'customer service',
            availableLanguage: 'English',
          },
          founder: {
            '@type': 'Person',
            name: 'Erik Marutian',
            url: 'https://talaxy.ai/about',
            jobTitle: 'Founder & CEO',
            sameAs: [
              'https://www.linkedin.com/in/erik-marutian/',
              'https://x.com/aitechguy1',
            ],
            alumniOf: {
              '@type': 'CollegeOrUniversity',
              name: 'University of California, Davis',
            },
          },
        },
        {
          '@type': 'WebSite',
          name: 'Talaxy.ai',
          url: 'https://talaxy.ai',
        },
        {
          '@type': 'Service',
          name: 'AI Talent Search',
          provider: { '@type': 'Organization', name: 'Talaxy.ai' },
          description: 'AI-powered hiring pipeline with structured interviews and predictive candidate scoring.',
        },
        {
          '@type': 'Service',
          name: 'White-Collar Automation',
          provider: { '@type': 'Organization', name: 'Talaxy.ai' },
          description: 'Custom AI agents that automate repetitive knowledge work for SMBs.',
        },
      ],
    })} />
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-gold-400 focus:text-space-900 focus:px-4 focus:py-2 focus:rounded-lg focus:font-medium">
      Skip to content
    </a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
      );

      document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
      });

      // Header glass blur on scroll
      const header = document.querySelector('[data-header]') as HTMLElement;
      if (header) {
        window.addEventListener('scroll', () => {
          if (window.scrollY > 50) {
            header.classList.add('header-scrolled');
          } else {
            header.classList.remove('header-scrolled');
          }
        }, { passive: true });
      }
    </script>
  </body>
</html>

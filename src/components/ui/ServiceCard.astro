---
interface Props {
  title: string;
  description: string;
  features: string[];
  icon: 'search' | 'automation';
}

const { title, description, features, icon } = Astro.props;
---

<div class="glass p-8 sm:p-10 hover:border-gold-400/20 transition-colors duration-300 group">
  <div class="w-12 h-12 rounded-xl gold-gradient flex items-center justify-center mb-6 group-hover:shadow-lg group-hover:shadow-gold-400/20 transition-shadow duration-300">
    {icon === 'search' ? (
      <svg class="w-6 h-6 text-space-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
      </svg>
    ) : (
      <svg class="w-6 h-6 text-space-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" />
      </svg>
    )}
  </div>

  <h3 class="font-serif text-2xl font-semibold text-cream mb-3">{title}</h3>
  <p class="text-silver-300 leading-relaxed mb-6">{description}</p>

  <ul class="space-y-3">
    {features.map((feature) => (
      <li class="flex items-start gap-3 text-silver-300 text-sm">
        <svg class="w-5 h-5 text-gold-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
        <span>{feature}</span>
      </li>
    ))}
  </ul>
</div>

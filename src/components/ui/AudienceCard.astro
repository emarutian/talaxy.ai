---
interface Props {
  title: string;
  description: string;
  range: string;
}

const { title, description, range } = Astro.props;
---

<div class="glass p-6 sm:p-8 hover:border-gold-400/20 transition-colors duration-300">
  <span class="inline-block text-xs font-medium text-gold-400 bg-gold-400/10 px-3 py-1 rounded-full mb-4">
    {range}
  </span>
  <h3 class="font-serif text-xl font-semibold text-cream mb-2">{title}</h3>
  <p class="text-silver-300 text-sm leading-relaxed">{description}</p>
</div>

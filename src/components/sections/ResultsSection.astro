---
import SectionHeader from '../ui/SectionHeader.astro';
import MetricCard from '../ui/MetricCard.astro';
import { results } from '../../data/site-config';
---

<section id="results" class="py-24 sm:py-32 bg-space-900">
  <div class="section-container">
    <div class="animate-on-scroll">
      <SectionHeader
        eyebrow={results.eyebrow}
        headline={results.headline}
        subtitle={results.subtitle}
      />
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
      {results.metrics.map((metric, i) => (
        <div class="animate-on-scroll" style={`transition-delay: ${i * 100}ms`}>
          <MetricCard value={metric.value} label={metric.label} />
        </div>
      ))}
    </div>
  </div>
</section>

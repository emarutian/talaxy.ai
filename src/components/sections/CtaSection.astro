---
import ContactForm from '../ui/ContactForm.astro';
import { cta } from '../../data/site-config';
---

<section id="contact" class="py-24 sm:py-32 bg-space-800 relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-gold-400/[0.03] rounded-full blur-[100px]" aria-hidden="true"></div>

  <div class="relative section-container">
    <div class="max-w-2xl mx-auto text-center mb-12 animate-on-scroll">
      <h2 class="font-serif text-3xl sm:text-4xl lg:text-5xl font-semibold text-cream leading-tight mb-4">
        {cta.headline}
      </h2>
      <p class="text-silver-300 text-lg leading-relaxed">
        {cta.subtitle}
      </p>
    </div>

    <div class="max-w-xl mx-auto animate-on-scroll" style="transition-delay: 150ms">
      <div class="glass p-8 sm:p-10">
        <ContactForm />
      </div>
    </div>
  </div>
</section>
